{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"name": "sidewalk",
	"mounts": [
		"source=/dev,target=/dev,type=bind",
		"source=/run/udev,target=/run/udev,type=bind,readonly",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	"runArgs": [
		"--name", "nrf-sidewalk",
		"--network=host"
	],
	"privileged": true,
	"remoteUser": "vscode",
	"updateRemoteUserUID": true,
	"containerEnv": {
		"LC_ALL": "C.UTF-8",
		"ZEPHYR_BASE": "/home/vscode/work/ncs/zephyr"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/work/ncs/sidewalk,type=bind",
	"workspaceFolder": "/home/vscode/work/ncs",
	"postCreateCommand": "bash /home/vscode/work/ncs/sidewalk/.devcontainer/bootstrap.sh",
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"nordic-semiconductor.nrf-connect",
				"eamodio.gitlens",
				"llvm-vs-code-extensions.vscode-clangd",
				"ms-vscode.cpptools",
				"mhutchie.git-graph",
				"twxs.cmake",
				"ms-vscode.live-server",
				"GitHub.vscode-pull-request-github",
				"zachflower.uncrustify",
				"ms-python.python",
				"ryanluker.vscode-coverage-gutters"
			]
		},
		"settings": {
			"github.gitAuthentication": true,
			"git.terminalAuthentication": true,
			"C_Cpp.intelliSenseEngine": "disabled",
			"nrf-connect.toolchain.path": "PATH",
			"nrf-connect.welcome.showOnStartup": false,
			"uncrustify.configPath.linux": "sidewalk/.uncrustify.cfg",
			"files.insertFinalNewline": true,
			"coverage-gutters.coverageBaseDir": "sidewalk/scripts/ci/**",
			"coverage-gutters.coverageFileNames": [
				"coverage.info",
				"lcov.info"
			],
			"editor.tabSize": 8
		}
	},
	"features": {
		"git": "latest"
	}
}
