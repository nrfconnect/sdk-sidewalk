{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"name": "sidewalk",
	"mounts": [
		"source=/dev,target=/dev,type=bind",
		"source=/run/udev,target=/run/udev,type=bind,readonly",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	"runArgs": [
		"--name", "nrf-sidewalk",
		"--network=host"
	],
	"privileged": true,
	"remoteUser": "vscode",
	"updateRemoteUserUID": true,
	"containerEnv": {
		"LC_ALL": "C.UTF-8",
		"ZEPHYR_BASE": "/work/ncs/zephyr"
	},
	"remoteEnv": {
		"PATH":"/workdir/zephyr-sdk/arm-zephyr-eabi/bin:/home/vscode/.local/bin:${containerEnv:PATH}"
	},
	"workspaceMount": "source=${localWorkspaceFolder}/..,target=/work/ncs,type=bind",
	"workspaceFolder": "/work/ncs",
	"postCreateCommand": "bash /work/ncs/sidewalk/.devcontainer/bootstrap.sh",
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"nordic-semiconductor.nrf-connect",
				"eamodio.gitlens",
				"llvm-vs-code-extensions.vscode-clangd",
				"ms-vscode.cpptools",
				"mhutchie.git-graph",
				"twxs.cmake",
				"ms-vscode.live-server",
				"GitHub.vscode-pull-request-github",
				"ms-python.python",
				"ryanluker.vscode-coverage-gutters",
				"vadimcn.vscode-lldb",
				"cschlosser.doxdocgen"
			],
			"settings": {
				"github.gitAuthentication": true,
				"git.terminalAuthentication": true,
				"C_Cpp.intelliSenseEngine": "disabled",
				"nrf-connect.toolchain.path": "PATH",
				"nrf-connect.welcome.showOnStartup": false,
				"files.insertFinalNewline": true,
				"coverage-gutters.coverageBaseDir": "sidewalk/scripts/ci/**",
				"coverage-gutters.coverageFileNames": [
					"coverage.info",
					"lcov.info"
				],
				"editor.tabSize": 8,
				"doxdocgen.file.copyrightTag": [
					"Copyright (c) {year} Nordic Semiconductor ASA",
					"",
					"SPDX-License-Identifier: LicenseRef-Nordic-5-Clause"
				],
				"doxdocgen.file.fileOrder": [
					"copyright",
					"custom"
				]
			}
		}
	},
	"features": {
		"git": "latest"
	}
}
