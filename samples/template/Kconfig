choice TEMPLATE_APP
	prompt "Template application to run"
    default TEMPLATE_APP_HELLO
config TEMPLATE_APP_HELLO
    bool "Sidewalk hello world application"
config TEMPLATE_APP_SENSOR_MONITORING
    bool "Demo sensor monitoring application"
    imply SIDEWALK_DEMO_PARSER
    imply SENSOR
	imply TEMP_NRF5
endchoice #TEMPLATE_APP

if TEMPLATE_APP_SENSOR_MONITORING

config TEMPLATE_APP_NOTIFY_DATA_PERIOD_MS
    int "Notify period of sensor monitoring template app"
    default 10000

config SIDEWALK_THREAD_PRIORITY
    default 12

config TEMPLATE_APP_TX_THREAD_PRIORITY
    int
    default 13

config TEMPLATE_APP_RX_THREAD_PRIORITY
    int
    default 14

config TEMPLATE_APP_TX_THREAD_STACK_SIZE
    int
    default 4096

config TEMPLATE_APP_RX_THREAD_STACK_SIZE
    int
    default 4096

config TEMPLATE_APP_TX_THREAD_QUEUE_SIZE
    int
    default 10

config TEMPLATE_APP_RX_THREAD_QUEUE_SIZE
    int
    default 4

endif #TEMPLATE_APP_SENSOR_MONITORING


config TEMPLATE_APP_CLI
    bool "Sidewalk command line interface"
    imply SHELL

config TEMPLATE_APP_BLE_ONLY
    bool "Use smaller Sidewalk libraries witch supports only BLE"
    default BOARD_THINGY53_NRF5340_CPUAPP

config SIDEWALK_AUTO_START
    default y
    bool "Start sidewalk sample uninitilized"

config SIDEWALK_AUTO_CONN_REQ
    default y
    bool "Start sidewalk sample uninitilized"

config SIDEWALK_PERSISTENT_LINK_MASK
	select EXPERIMENTAL
    bool "Remeber last link mask over device resets"
    help
      The Sidewalk link mask persists after a device reset
      but defaults after a factory reset.
      This could affect the flash lifespan.

config TEMPLATE_APP_EVENT_HEAP_SIZE
    int "Heap for Sidewalk event contexts"
    default 2048

config SIDEWALK_SUBGHZ
    default !TEMPLATE_APP_BLE_ONLY

mainmenu "Sidewalk nRF Connect Application"

# Bluetooth
config BT_REMOTE_VERSION
	default y

config BT_BUF_ACL_TX_SIZE
	default 251
	default 502 if SIDEWALK_DFU_BLE_FAST

config BT_BUF_ACL_TX_COUNT
	default 3

config BT_BUF_ACL_RX_SIZE
	default 251
	default 502 if SIDEWALK_DFU_BLE_FAST

config BT_BUF_ACL_RX_COUNT
	default 6

config BT_L2CAP_TX_MTU
	default 247
	default 498 if SIDEWALK_DFU_BLE_FAST

config BT_CTLR_DATA_LENGTH_MAX
	default 247
	default 251 if SIDEWALK_DFU_BLE_FAST

config BT_PERIPHERAL_PREF_MIN_INT
	default 16

config BT_PERIPHERAL_PREF_MAX_INT
	default 60

config BT_PERIPHERAL_PREF_LATENCY
	default 0

config BT_PERIPHERAL_PREF_TIMEOUT
	default 400

# NVM
config NVS_LOOKUP_CACHE
	default y

config NVS_LOOKUP_CACHE_SIZE
	default 1024

# Stack and Heap
config SYSTEM_WORKQUEUE_STACK_SIZE
	default 4096 if SIDEWALK_LINK_MASK_LORA || SIDEWALK_LINK_MASK_FSK
	default 4096 if SIDEWALK_DFU_SERVICE_BLE

config LOG_PROCESS_THREAD_STARTUP_DELAY_MS
	default 50 if SHELL

config SHELL_STACK_SIZE
	default 8192 if SIDEWALK_CLI

config HEAP_MEM_POOL_SIZE
	default 1024

config SPI_NRFX_RAM_BUFFER_SIZE
	default 0

config PARTITION_MANAGER_ENABLED
	default y

source "Kconfig.zephyr"
