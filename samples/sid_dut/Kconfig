	bool "Enable sidewalk CLI"
  	default y
	imply SHELL

module = SID_THREAD
module-str = Sidewalk event thread
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

choice SID_THREAD_LOG_LEVEL_CHOICE
	default SID_THREAD_LOG_LEVEL_DBG
endchoice

config SIDEWALK_GPIO
	default y

config SIDEWALK_SPI_BUS
	default y

config SIDEWALK_TEMPERATURE
	default y

choice SIDEWALK_LINK_MASK
	default SIDEWALK_LINK_MASK_FSK
endchoice

config SHELL_CMD_BUFF_SIZE
	default 1024

config SHELL_BACKEND_SERIAL_TX_RING_BUFFER_SIZE
	default 128

config SHELL_BACKEND_SERIAL_RX_RING_BUFFER_SIZE
	default 1024

rsource "../common/Kconfig.defconfig"

source "Kconfig.zephyr"
